{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
<div class="container">
<h1 class="my-4">Reponse index</h1>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom Reponse</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for reponse in reponses %}
                <tr>
                    <td>{{ reponse.id }}</td>
                    <td>{{ reponse.nomReponse }}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_reponse_crud_controller_show', {'id': reponse.id}) }}" class="btn btn-sm btn-outline-primary me-2">Voir</a>
                            <a href="{{ path('app_reponse_crud_controller_edit', {'id': reponse.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_reponse_crud_controller_new') }}" class="btn btn-primary">Créer une nouvelle réponse</a>
    </div>
</div>
{% endblock %}