{% include 'head.html.twig' %}
<div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h1 class="text-center text-white">Connexion</h1>
          </div>
          <div class="card-body">
            <form method="POST" action="{{ path('login_check') }}">
              <div class="form-group">
                <label for="username">Identifiant :</label>
                <input type="text" id="username" name="_email" class="form-control" required>
              </div>

              <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="_password" class="form-control" required>
              </div>

              <button type="submit" class="d-flex btn btn-primary btn-block ms-auto me-auto mt-3">Se connecter</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>