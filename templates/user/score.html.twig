{% extends 'base.html.twig' %}

{% block title %}
Score and Correction - {{ questionnaire.nomQuestionnaire }}
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Score and Correction</h3></div>
                <div class="card-body">
                    <h4 class="mb-4">Your score: {{ score }} / {{ questionnaire.getTotalPoints() }}</h4>

                    {% for questionId, correctAnswers in correctAnswersPerQuestion %}
                        <div class="question mb-4">
                            <h6 class="mb-3">{{ loop.index }}. {{ questionnaire.getQuestionById(questionId).nomQuestion }}</h6>
                            <ul>
                                {% for answer in correctAnswers %}
                                    <li>{{ answer.nomReponse }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
